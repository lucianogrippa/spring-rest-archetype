#set( $symbol_pound = '#' )
#set( $symbol_dollar = '$' )
#set( $symbol_escape = '\' )
<?xml version="1.0" encoding="UTF-8" ?>
<log4j:configuration xmlns:log4j='http://jakarta.apache.org/log4j/'>

	<appender name="STDOUT" class="org.apache.log4j.ConsoleAppender">
           <layout class="org.apache.log4j.PatternLayout">
             <param name="ConversionPattern"
		    value="%-4r [%t] %-5p %c %x - %m%n"/>
           </layout>	    
	</appender>

	<appender name="hlog" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="${symbol_dollar}{jboss.server.home.dir}/log/rest-api-demo-query.log" />
		<param name="DatePattern" value="'.'yyyy-ww" />
		<!-- <param name="Threshold" value="info"/>	-->
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-7p %d [%t] %c %x - %m%n"/>
		</layout>
	</appender>
	
	
	<logger name="org.hibernate">
		<level value="ERROR" />
		<appender-ref ref="hlog" />
	</logger>
	
	<logger name="org.hibernate.SQL">
		<level value="DEBUG" />
		<appender-ref ref="hlog" />
	</logger>
	
	<logger name="org.hibernate.type.descriptor.sql">
		<level value="TRACE" />
		<appender-ref ref="hlog" />
	</logger>
	
	<logger name="org.hibernate.hql.internal.ast.AST">
		<level value="DEBUG" />
		<appender-ref ref="hlog" />
	</logger>
	
	<logger name="org.hibernate.tool.hbm2ddl">
		<level value="DEBUG" />
		<appender-ref ref="hlog" />
	</logger>
	
	<root>
	   <!-- <priority value ="info" /> -->
	   <appender-ref ref="hlog" />
	</root>
	
</log4j:configuration>